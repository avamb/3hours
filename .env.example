# MINDSETHAPPYBOT Environment Configuration
# Copy this file to .env and fill in your values

# ========== REQUIRED ==========

# Telegram Bot Token (get from @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# OpenAI API Key (for GPT and Whisper)
OPENAI_API_KEY=your_openai_api_key_here

# ========== DATABASE ==========

# PostgreSQL credentials
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=mindsethappybot

# Database connection URL (auto-generated from above if not set)
# For bot: postgresql+asyncpg://user:pass@host:port/dbname
# For admin: postgresql://user:pass@host:port/dbname
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/mindsethappybot

# ========== ADMIN PANEL ==========

# Admin panel credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Admin panel port (standard for Dokploy)
PORT=8080

# ========== OPTIONAL ==========

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Default timezone for users (IANA timezone name)
DEFAULT_TIMEZONE=UTC
